{
    "name": "webfactory/polyglot-bundle",
    "type": "symfony-bundle",
    "description": "Symfony2 bundle simplifying translations in Doctrine.",
    "license": "MIT",
    "authors": [
        {
            "name": "webfactory GmbH",
            "email": "info@webfactory.de",
            "homepage": "http://www.webfactory.de",
            "role": "Developer"
        }
    ],

    "autoload": {
        "psr-0": { "Webfactory\\Bundle\\PolyglotBundle": "src" }
    },

    "require": {
        "php": "^5.5 | ^7.0",
        "ext-mbstring": "*",
        "doctrine/orm": "~2.2",
        "symfony/symfony": "~2.0 | ^3.0.0"
    },

    "require-dev": {
        "symfony/debug": "^2.8.0 | ^3.0.0",
        "phpunit/phpunit": "~3.7",
        "satooshi/php-coveralls": "~0.6",
        "squizlabs/php_codesniffer": "~1.0",
        "phpmd/phpmd": "~1.0",
        "sebastian/phpcpd": "~2.0",
        "mayflower/php-codebrowser": "~1.1",
        "phploc/phploc": "~2.0",
        "pdepend/pdepend": "~1.1",
        "webfactory/doctrine-orm-test-infrastructure": "~1.0"
    },

    "extra": {
        "branch-alias": {
            "dev-default": "1.0.x-dev"
        }
    }
}
