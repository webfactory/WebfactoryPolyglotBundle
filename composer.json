{
    "name": "webfactory/polyglot-bundle",
    "type": "symfony-bundle",
    "description": "Symfony2 bundle simplifying translations in Doctrine.",
    "license": "MIT",
    "authors": [
        {
            "name": "webfactory GmbH",
            "email": "info@webfactory.de",
            "homepage": "http://www.webfactory.de",
            "role": "Developer"
        }
    ],

    "autoload": {
        "psr-0": { "Webfactory\\Bundle\\PolyglotBundle": "src" }
    },

    "require": {
        "doctrine/orm": "~2.2",
        "php": "^5.5|^7.0",
        "symfony/config": "^2.0|^3.0|^4.0",
        "symfony/debug": "^2.0|^3.0|^4.0",
        "symfony/dependency-injection": "^2.0|^3.0|^4.0",
        "symfony/event-dispatcher": "^2.0|^3.0|^4.0",
        "symfony/http-kernel": "^2.0|^3.0|^4.0"
    },

    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "symfony/debug": "^2.8|^3.0|^4.0",
        "symfony/phpunit-bridge": "dev-master",
        "webfactory/doctrine-orm-test-infrastructure": "~1.0"
    },

    "config": {
        "sort-packages": true
    }
}
